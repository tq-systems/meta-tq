From: Markus Niebel <Markus.Niebel@tq-group.com>
Date: Mon, 14 Jan 2019 15:21:33 +0100
Subject: [PATCH 13/24] boards: tqma8mx: Kconfig: select some sensible defaults

Signed-off-by: Markus Niebel <Markus.Niebel@tq-group.com>
---
 arch/arm/cpu/armv8/imx8m/Kconfig | 8 ++++++++
 board/tqc/tqma8mx/Kconfig        | 2 ++
 2 files changed, 10 insertions(+)

diff --git a/arch/arm/cpu/armv8/imx8m/Kconfig b/arch/arm/cpu/armv8/imx8m/Kconfig
index f99305a82f..4d05527d3a 100644
--- a/arch/arm/cpu/armv8/imx8m/Kconfig
+++ b/arch/arm/cpu/armv8/imx8m/Kconfig
@@ -30,7 +30,15 @@ config TARGET_IMX8MQ_DDR4_ARM2
 config TARGET_TQMA8MX
 	bool "tqma8mx"
 	select IMX8M
+	select BOARD_LATE_INIT
+	select PINCTRL
+	select PINCTRL_IMX8M
+	select DM_THERMAL
+	select DM_ETH
+	select DM_SERIAL
+	select MISC
 	select SUPPORT_SPL
+	select SPL
 
 endchoice
 
diff --git a/board/tqc/tqma8mx/Kconfig b/board/tqc/tqma8mx/Kconfig
index 8348b011ee..aea3fbec24 100644
--- a/board/tqc/tqma8mx/Kconfig
+++ b/board/tqc/tqma8mx/Kconfig
@@ -31,6 +31,8 @@ choice
 config MBA8MX
 	bool "TQMa8MX on MBa8MX Starterkit"
 	select TQC_SDMMC
+	select PHYLIB
+	select PHY_TI
 	help
 	  Select the MBa8MX starterkit. This features a GigE Phy, USB, SD-Card
 	  etc.
