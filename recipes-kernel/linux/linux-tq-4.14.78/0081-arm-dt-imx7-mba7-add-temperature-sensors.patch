From e331f2dc2cbe23374db465f9cfbf4810ac768900 Mon Sep 17 00:00:00 2001
From: Max Merchel <Max.Merchel@tq-group.com>
Date: Thu, 24 Jan 2019 15:42:22 +0100
Subject: [PATCH 081/188] arm: dt: imx7-mba7: add temperature sensors

Signed-off-by: Max Merchel <Max.Merchel@tq-group.com>
---
 arch/arm/boot/dts/imx7-mba7.dtsi  |  8 ++++++++
 arch/arm/boot/dts/imx7-tqma7.dtsi | 11 +++++++++++
 2 files changed, 19 insertions(+)

diff --git a/arch/arm/boot/dts/imx7-mba7.dtsi b/arch/arm/boot/dts/imx7-mba7.dtsi
index fa5e6d3a27bc..4cba30ba3823 100644
--- a/arch/arm/boot/dts/imx7-mba7.dtsi
+++ b/arch/arm/boot/dts/imx7-mba7.dtsi
@@ -121,6 +121,14 @@
 	status = "okay";
 };
 
+&i2c1 {
+	sensor1: lm75@49 {
+		compatible = "national,lm75";
+		reg = <0x49>;
+		status = "okay";
+	};
+};
+
 &i2c2 {
 	clock-frequency = <100000>;
 	pinctrl-names = "default";
diff --git a/arch/arm/boot/dts/imx7-tqma7.dtsi b/arch/arm/boot/dts/imx7-tqma7.dtsi
index 8f3bc86478e9..12df84444cef 100644
--- a/arch/arm/boot/dts/imx7-tqma7.dtsi
+++ b/arch/arm/boot/dts/imx7-tqma7.dtsi
@@ -126,6 +126,17 @@
 		pagesize = <16>;
 		status = "okay";
 	};
+
+	/*
+	 * NXP SE97BTP with temperature sensor + eeprom
+	 * ATTENTION: do not use correct dt compatible since this will conflict
+	 * with hwmon sysfs ABI and break device registration
+	 */
+	sensor0: jc42@1e {
+		compatible = "nxp,se97", "jedec,jc-42.4-temp";
+		reg = <0x1e>;
+		status = "okay";
+	};
 };
 
 &iomuxc {
