From df90411fb3d3c74d4c91de0209b8b138a8d0fe4a Mon Sep 17 00:00:00 2001
From: Max Merchel <Max.Merchel@tq-group.com>
Date: Thu, 24 Jan 2019 15:30:17 +0100
Subject: [PATCH 083/188] arm: dt: imx7-mba7: add pcie

Signed-off-by: Max Merchel <Max.Merchel@tq-group.com>
---
 arch/arm/boot/dts/imx7-mba7.dtsi  | 22 ++++++++++++++++++++++
 arch/arm/boot/dts/imx7d-mba7.dtsi | 20 ++++++++++++++++++++
 2 files changed, 42 insertions(+)

diff --git a/arch/arm/boot/dts/imx7-mba7.dtsi b/arch/arm/boot/dts/imx7-mba7.dtsi
index 4cba30ba3823..384b72ac9e87 100644
--- a/arch/arm/boot/dts/imx7-mba7.dtsi
+++ b/arch/arm/boot/dts/imx7-mba7.dtsi
@@ -66,6 +66,28 @@
 			enable-active-high;
 		};
 
+		reg_mpcie_1v5: regulator@5 {
+			compatible = "regulator-fixed";
+			reg = <5>;
+			regulator-name = "VCC1V5_MPCIE";
+			regulator-min-microvolt = <1500000>;
+			regulator-max-microvolt = <1500000>;
+			gpio = <&gpioexp 12 GPIO_ACTIVE_HIGH>;
+			enable-active-high;
+			regulator-always-on;
+		};
+
+		reg_mpcie_3v3: regulator@6 {
+			compatible = "regulator-fixed";
+			reg = <6>;
+			regulator-name = "VCC3V3_MPCIE";
+			regulator-min-microvolt = <3300000>;
+			regulator-max-microvolt = <3300000>;
+			gpio = <&gpioexp 10 GPIO_ACTIVE_HIGH>;
+			enable-active-high;
+			regulator-always-on;
+		};
+
 		reg_vref_1v8: regulator@9 {
 			compatible = "regulator-fixed";
 			reg = <9>;
diff --git a/arch/arm/boot/dts/imx7d-mba7.dtsi b/arch/arm/boot/dts/imx7d-mba7.dtsi
index 52349f300279..9bd957ecb019 100644
--- a/arch/arm/boot/dts/imx7d-mba7.dtsi
+++ b/arch/arm/boot/dts/imx7d-mba7.dtsi
@@ -64,5 +64,25 @@
 				MX7D_PAD_EPDC_PWR_STAT__GPIO2_IO31		0x40000078
 			>;
 		};
+
+		pinctrl_pcie: pciegrp {
+			fsl,pins = <
+				MX7D_PAD_EPDC_PWR_COM__GPIO2_IO30	0x70 /* #pcie_wake */
+				MX7D_PAD_SD2_CLK__GPIO5_IO12		0x70 /* #pcie_rst */
+				MX7D_PAD_EPDC_BDR1__GPIO2_IO29		0x70 /* #pcie_dis */
+			>;
+		};
 	};
 };
+
+&pcie {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_pcie>;
+	/* 1.5V logically from 3.3V */
+	vpcie-supply = <&reg_mpcie_1v5>;
+	reset-gpio = <&gpio5 12 GPIO_ACTIVE_LOW>;
+	disable-gpio = <&gpio2 29 GPIO_ACTIVE_LOW>;
+	power-on-gpio = <&gpio2 30 GPIO_ACTIVE_LOW>;
+	ext_osc = <1>;
+	status = "okay";
+};
