Subject: [PATCH 132/188] arm64: platforms: select CLKSRC_MMIO and
 RESET_CONTROLLER for i.MX8

Signed-off-by: Markus Niebel <Markus.Niebel@tq-group.com>
---
 arch/arm64/Kconfig.platforms | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm64/Kconfig.platforms b/arch/arm64/Kconfig.platforms
index 2d944087e10a..265cb45e29bb 100644
--- a/arch/arm64/Kconfig.platforms
+++ b/arch/arm64/Kconfig.platforms
@@ -268,6 +268,8 @@ config ARCH_ZYNQMP
 
 config ARCH_FSL_IMX8QM
 	bool "Freescale i.MX8QM SOC"
+	select CLKSRC_MMIO
+	select RESET_CONTROLLER
 	select PINCTRL
 	select PINCTRL_IMX
 	select PINCTRL_IMX8QM
@@ -279,6 +281,8 @@ config ARCH_FSL_IMX8QM
 
 config ARCH_FSL_IMX8QP
 	bool "Freescale i.MX8QP SOC"
+	select CLKSRC_MMIO
+	select RESET_CONTROLLER
 	select PINCTRL
 	select PINCTRL_IMX
 	select PINCTRL_IMX8QM
@@ -291,6 +295,8 @@ config ARCH_FSL_IMX8QP
 
 config ARCH_FSL_IMX8QXP
 	bool "Freescale i.MX8QXP SOC"
+	select CLKSRC_MMIO
+	select RESET_CONTROLLER
 	select PINCTRL
 	select PINCTRL_IMX
 	select PINCTRL_IMX8QXP
@@ -304,6 +310,8 @@ config ARCH_FSL_IMX8MQ
 	bool "Freescale i.MX8MQ SOC"
 	select ARCH_MXC
 	select SERIAL_IMX
+	select CLKSRC_MMIO
+	select RESET_CONTROLLER
 	select PINCTRL
 	select PINCTRL_IMX
 	select PINCTRL_IMX8MQ
@@ -317,6 +325,8 @@ config ARCH_FSL_IMX8MM
 	bool "Freescale i.MX8MM SOC"
 	select ARCH_MXC
 	select SERIAL_IMX
+	select CLKSRC_MMIO
+	select RESET_CONTROLLER
 	select PINCTRL
 	select PINCTRL_IMX
 	select PINCTRL_IMX8MM
